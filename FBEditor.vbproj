<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net48</TargetFramework>
    <RootNamespace>FBEditor</RootNamespace>
    <AssemblyName>FBEditor</AssemblyName>
    <UseWindowsForms>true</UseWindowsForms>
    <Version>4.1.0</Version>
    <FileVersion>4.1.0.0</FileVersion>
    <AssemblyVersion>4.1.0.0</AssemblyVersion>
    <Product>FBEditor</Product>
    <Description>FreeBASIC IDE with GDB Debugger</Description>
    <ApplicationIcon>Resources\FBEditor.ico</ApplicationIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <StartupObject>FBEditor.Program</StartupObject>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <Platforms>AnyCPU;x86</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="jacobslusser.ScintillaNET" Version="3.6.3" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Net.Http" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\FBEditor.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
